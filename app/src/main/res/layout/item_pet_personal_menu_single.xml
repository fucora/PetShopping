<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/lltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivSingleImg1"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pet_personal_single1"/>
        <ImageView
            android:id="@+id/ivSingleImg2"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pet_personal_single1"/>
        <ImageView
            android:id="@+id/ivSingleImg3"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pet_personal_single1"/>
        <ImageView
            android:id="@+id/ivSingleImg4"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pet_personal_single1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSingleDash"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/lltop"
        android:background="@color/lightgray1"/>
</RelativeLayout>