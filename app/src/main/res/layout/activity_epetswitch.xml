<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/trip_tower_reuse_goods_cell_bg_two"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:glassview="http://schemas.android.com/apk/res-auto">
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GlassView
            android:id="@+id/baseGlassView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#55ffffff">
        </GlassView>
    </RelativeLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llRotate"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:id="@+id/note_type"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30.0dip"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/expert_font_color_999999"
                        android:id="@+id/top_epettype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:text="DOG" />
                    <ImageView
                        android:background="@color/black"
                        android:layout_width="10.0dip"
                        android:layout_height="2.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/note_layout"
                    android:layout_below="@+id/note_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/expert_font_color_999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="亲爱的小主" />
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/expert_font_color_666666"
                        android:id="@+id/current_epettype_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:text="您当前在s%站" />
                </LinearLayout>
                <ImageView
                    android:background="@color/black"
                    android:layout_width="10.0dip"
                    android:layout_height="2.0dip"
                    android:layout_marginTop="30.0dip"
                    android:layout_below="@id/note_layout"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <!--旋转木马切换类型-->
            <cn.lovepet.shops.helper.looprotary_switchview.view.LoopRotarySwitchView
                android:id="@+id/mLoopRotarySwitchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:r="70dp"
                app:direction="right">
                <RelativeLayout
                    android:id="@+id/rlDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/dog_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/epettype_dog_img_style"/>

                    <TextView
                        android:id="@+id/dog_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dog_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="狗狗站"
                        android:textColor="@color/main_color_txt_title"
                        android:textSize="12sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cat_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/epettype_cat_img_style"/>

                    <TextView
                        android:id="@+id/cat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cat_img"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:text="猫猫站"
                        android:textColor="@color/main_color_txt_title"
                        android:textSize="12sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlFish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fish_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/epettype_fish_img_style"/>

                    <TextView
                        android:id="@+id/fish_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fish_img"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:text="水族站"
                        android:textColor="@color/main_color_txt_title"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </cn.lovepet.shops.helper.looprotary_switchview.view.LoopRotarySwitchView>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/write"
            android:gravity="center"
            android:id="@+id/into_enter"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_epettype_enter_dog"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_marginTop="30.0dip"
            android:text="立即进入" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/llBottomClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:background="@color/line_bg_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/switchClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="20.0dip"
            android:padding="10dp"
            android:src="@drawable/close_pettypeswitchpage"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>