<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/image"
        android:width="60.0dip"
        android:height="60.0dip"
        android:drawable="@mipmap/widget_dialog_progress_center" />
    <item
        android:width="60.0dip"
        android:height="60.0dip">
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%"
            android:repeatCount="infinite"
            android:toDegrees="359.0">
            <bitmap
                android:antialias="true"
                android:filter="true"
                android:src="@mipmap/widget_dialog_progress_rotate" />
        </rotate>
    </item>
</layer-list>